<% include ../partials/header %>

<div class="container">
    
    <h1 style="text-align: center;">Edit comment</h1>

    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div style="width:30%; margin: 25px auto;">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="">Submit!</button>
            </div>
            <a href="/campgrounds">Go back</a>
        </div>
    </form>
</div>

